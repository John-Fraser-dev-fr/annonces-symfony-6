{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<h4 class="text-center mt-5 mb-5">Le site de référence de vente bien immobiliers entre particuliers.</h4>

	<div class="text-center">
		<button type="button" class="btn btn-primary btn-lg col-6 mb-5">Déposer une annonce</button>
	</div>

	<h4 class="text-center mt-5 mb-5">Nos annonces</h4>

    <div class="row" style="justify-content:center" >

        {% for annonce in annonces %}
	        <div class="card mt-5 m-1 col-3 p-0">
		        <img src="{{annonce.imageCover}}">
		        <div class="card-body">
			        <h6><b>{{annonce.type}} {{annonce.nbpieces}} {% if annonce.nbpieces == 1 %} pièce {% else %} pièces{% endif %} {{annonce.surface}} m²</b></h6>
                    <p class="card-text" style="color:grey">{{annonce.ville}} {{annonce.cdpostal}}</p>
                    <p class="card-text" style="color: #0d6efd"><b>{{annonce.prix | number_format(0, ' ', ' ')}} €</b></p>
		        </div>
	        </div>
        {% endfor %}

    </div>

    
	


{% endblock %}
