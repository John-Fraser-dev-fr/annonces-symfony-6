{% extends 'base.html.twig' %}

{% block title %}{% endblock %}


{% block body %}


	<div class="container mt-5 p-5" style="display:flex">

		<div class="col-6">
			<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-inner">
                    <div class="carousel-item active">
						<img src="/images/{{annonce.imageCover}}" class="img-fluid" style="width:550px;height:350px" alt="...">
					</div>
					{% for image in images %}
						<div class="carousel-item">
							<img src="/images/{{image.image}}" class="img-fluid"  style="width:550px;height:350px" alt="...">
						</div>
					{% endfor %}
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>

			<div>
				<h5 class="mt-2">
					<b>Vente
						{{annonce.type}}</b>
				</h5>
				<div style="display:flex; justify-content: space-between;">
					<div>
						<p style="margin-bottom: 0.1rem">{{annonce.nbpieces}}
							{% if annonce.nbpieces == 1 %}
								pièce
							{% else %}
								pièces
							{% endif %}
							{{annonce.surface}}
							m²</p>
						<p style="color:grey">
							<small>{{annonce.ville}}
								({{annonce.cdpostal}})</small>
						</p>
					</div>
					<div>
						<h5>{{annonce.prix | number_format(0, ' ', ' ')}} €</h5>
					</div>
				</div>
			</div>
			<div>
				<h5 class="mt-2">
					<b>Description</b>
				</h5>
				<p>{{annonce.titre}}</p>
				<p>{{annonce.description}}</p>
			</div>
		</div>

		<div class="col-6" style="text-align: -webkit-center">
			<div class="card text-white bg-primary mb-3" style="max-width: 20rem;text-align: center;">
				<div class="card-body">
					<h4 class="card-title">{{annonce.user.prenom}}
						{{annonce.user.nom}}
					</h4>
					<p class="card-text">
						{{annonce.user.annonce| length}}
						{% if annonce.user.annonce| length == 1 %}
							annonce
						{% else %}
							annonces
						{% endif %}
					</p>
					<div class="d-grid gap-2 pt-3">
						<button class="btn btn-light" type="button">Afficher son n° de téléphone
						</button>
						<button class="btn btn-light" type="button">Envoyer un message</button>
					</div>
				</div>
			</div>

		</div>


	</div>
{% endblock %}
